<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgImageOfFoodList"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/brackground_category_show"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/size10dp"
        >

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/size10dp"
        android:background="@color/backgroundtransparentGreen"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size10dp">

        <TextView
            android:id="@+id/txtNameOfFoodList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="AAAA"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPriceOfFoodList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="BBBBB"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>