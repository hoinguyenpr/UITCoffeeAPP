        <activity android:name=".Activity.Activity_Add_Table"
            android:theme="@style/popupActivity"
            >
        </activity>

        <activity android:name=".Activity.Activity_Add_Menu">
        </activity>

        <activity android:name=".Activity.Activity_Add_Category"
            android:theme="@style/popupActivity"
            android:label="@string/category"
            >
        </activity>

        <activity android:name=".Activity.Activity_Quantity"
            android:theme="@style/popupActivity"
