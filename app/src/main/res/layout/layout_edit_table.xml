<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorGreenPrimary"
    >
    <TextView
        android:layout_marginTop="@dimen/size100dp"
        android:id="@+id/txtEditTableNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa tên bàn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/size30sp"
        android:layout_marginBottom="@dimen/size100dp"
        />

    <EditText
        android:id="@+id/edEditTableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_below="@id/txtEditTableNameTitle"
        android:hint="Tên bàn ăn"
        android:textColorHint="@color/colorGray"
        android:padding="@dimen/size10dp"
        android:layout_margin="@dimen/size10dp"
        android:drawablePadding="@dimen/size10dp"
        android:textColor="@color/colorGray"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edEditTableName"
        >
        <Button
            android:id="@+id/btnAcceptEditTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size20dp"
            android:background="@color/colorGreenDark"/>
        <Button
            android:id="@+id/btnCancelEditTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size20dp"
            android:background="@color/colorGreenDark"/>
    </LinearLayout>




</RelativeLayout>