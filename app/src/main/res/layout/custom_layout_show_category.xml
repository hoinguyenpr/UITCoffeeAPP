<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCategory"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/brackground_category_show"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/size10dp"
        >

    </ImageView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/size10dp"
        android:background="@color/backgroundtransparentGreen"
        android:layout_margin="@dimen/size10dp"
        >

        <TextView
            android:id="@+id/txtNameOfCategoryInList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/size18sp"
            android:textStyle="bold"
            />
    </FrameLayout>

</FrameLayout>