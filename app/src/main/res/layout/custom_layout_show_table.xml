<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/txtNameTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size20dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size10dp"
        android:autoSizeMaxTextSize="@dimen/size6dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/imgTable"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/table_free"
        android:layout_below="@id/txtNameTable"
        />
    <ImageView
        android:id="@+id/imgOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_food"
        android:layout_below="@id/imgTable"
        android:layout_margin="@dimen/size4dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/imgPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/payment_food"
        android:layout_below="@id/imgTable"
        android:layout_toRightOf="@id/imgOrder"
        android:layout_margin="@dimen/size4dp"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/imgHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel_button"
        android:layout_below="@id/imgTable"
        android:layout_toRightOf="@id/imgPayment"
        android:layout_margin="@dimen/size4dp"
        android:visibility="invisible"
        />
</RelativeLayout>
