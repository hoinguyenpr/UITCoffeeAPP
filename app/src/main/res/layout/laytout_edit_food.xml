<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorGreenPrimary"
    >
    <TextView
        android:id="@+id/txtCreateEmployeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa món ăn"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/size30sp"
        android:layout_above="@id/lnEditFoodForm"
        android:layout_marginBottom="@dimen/size100dp"
        />
    <LinearLayout
        android:id="@+id/lnEditFoodForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <EditText
            android:id="@+id/edEditFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Ten mon an"
            android:textColorHint="@color/colorGray"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size10dp"
            android:drawablePadding="@dimen/size10dp"
            android:textColor="@color/colorGray"
            />
        <EditText
            android:id="@+id/edEditFoodPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:hint="Gia"
            android:textColorHint="@color/colorGray"
            android:padding="@dimen/size10dp"
            android:layout_margin="@dimen/size10dp"
            android:drawablePadding="@dimen/size10dp"
            android:textColor="@color/colorGray"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btnAcceptEditFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:padding="@dimen/size10dp"
                android:layout_margin="@dimen/size20dp"
                android:background="@color/colorGreenDark"/>
            <Button
                android:id="@+id/btnCancelEditFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exit"
                android:padding="@dimen/size10dp"
                android:layout_margin="@dimen/size20dp"
                android:background="@color/colorGreenDark"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>